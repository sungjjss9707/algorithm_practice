#include<iostream>
using namespace std;

int main(void)
{
	int n,i,k, star, gong;
	cin>>n;
	for(i=1; i<n; ++i){
		star=i;
		gong = n-i;
		for(k=0; k<gong; ++k){
			cout<<" ";
		}
		for(k=0; k<star; ++k){
			cout<<"*";
		}
		cout<<"\n";
	}
	for(k=0; k<n; ++k){
		cout<<"*";
	}
	cout<<"\n";
	for(i=n-1; i>0; --i){
		star=i;
		gong = n-i;
		for(k=0; k<gong; ++k){
			cout<<" ";
		}
		for(k=0; k<star; ++k){
			cout<<"*";
		}
		cout<<"\n";
	}
}
