#include<iostream>

using namespace std;

int main(void)
{
	int i,k,n,numofstar, numofgong;
	cin>>n;
	for(i=1; i<=n-1; ++i){
		numofgong = n-i;
		numofstar = 2*i-1;
		for(k=0; k<numofgong; ++k){
			cout<<" ";
		}
		for(k=0; k<numofstar; ++k){
			cout<<"*";
		}
		cout<<"\n";
	}
	for(i=1; i<=2*n-1; ++i){
		cout<<"*";
	}
	cout<<"\n";
	for(i=n-1; i>=1; --i){
		
		numofgong = n-i;
		numofstar = 2*i-1;
		for(k=0; k<numofgong; ++k){
			cout<<" ";
		}
		for(k=0; k<numofstar; ++k){
			cout<<"*";
		}
		cout<<"\n";
	}
}
