#include<iostream>
using namespace std;

int main(void)
{
	int n,i,k, star, gong;
	cin>>n;
	for(i=1; i<n; ++i){
		star=i;
		gong = 2*(n-i);
		for(k=1; k<=star; ++k){
			cout<<"*";
		}
		for(k=1; k<=gong; ++k){
			cout<<" ";
		}
		for(k=1; k<=star; ++k){
			cout<<"*";
		}
		cout<<"\n";
	}
	for(k=1; k<=2*n; ++k){
		cout<<"*";
	}
	cout<<"\n";
	for(i=n-1; i>=1; --i){
		star=i;
		gong = 2*(n-i);
		for(k=1; k<=star; ++k){
			cout<<"*";
		}
		for(k=1; k<=gong; ++k){
			cout<<" ";
		}
		for(k=1; k<=star; ++k){
			cout<<"*";
		}
		cout<<"\n";
	}
	
	
}
