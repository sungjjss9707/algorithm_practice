#include<iostream>
using namespace std;

int main(void)
{
	int n,i,k, chong,star, gong;
	cin>>n;
	for(i=1; i<n; ++i){
		gong = n-i;
		chong = 2*i-1;
		for(k=1; k<=gong; ++k){
			cout<<" ";
		}
		for(k=1; k<=chong; ++k){
			if(k==1||k==chong){
				cout<<"*";
			}
			else{
				cout<<" ";	
			}
		}
		cout<<"\n";
		
	}
	for(i=1; i<=2*n-1; ++i){
		cout<<"*";
	}
}
